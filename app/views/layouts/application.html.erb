            <p  class="small margin_top_40">at <%=Time.zone.now.strftime("%I:00 %p")%></p>
            <div class="small margin_top_40">Status: <%= @status %></div>
        </div>
        
        <div>
    	   <b><%= @previous %></b>
           <p  class="small margin_top_20 "></p><br>
            <p  class="small margin_top_40">an hour before <%=Time.zone.now.strftime("%I:00 %p")%></p>
           <div class="small margin_top_40">Status: <%= @status2 %></div>
        </div>

        <div class="line"> </div>

     <div class="bigger">
       Top value is PSI. Bottom is PM2.5. 
    </div>

        <div>        
            <div>
              <a name="north"></a> 
              <p>
                north
              </p>
             <b><%= @north %></b>
             <b><%= @north_25 %></b>
               <p  class="small margin_top_20 "></p><br>
               <div class="small margin_top_40">PSI Status: <%= @north_status %></div><br>
               <div class="small margin_top_40">2.5 Status: <%= @north_25_status %></div>

   

            </div>


            <div class="line"> </div>


            <div>
              <a name="south"></a> 

              <p>
                south
              </p>
             <b><%= @south %></b>
             <b><%= @south_25 %></b>

               <p  class="small margin_top_20 "></p><br>
               <div class="small margin_top_40">PSI Status: <%= @south_status %></div><br>
               <div class="small margin_top_40">2.5 Status: <%= @south_25_status %></div>

            </div>

            <div class="line"> </div>


            <div>
              <a name="east"></a> 

              <p>
                east
              </p>
             <b><%= @east %></b>
              <b><%= @east_25 %></b>

               <p  class="small margin_top_20 "></p><br>
               <div class="small margin_top_40">PSI Status: <%= @east_status %></div><br>
               <div class="small margin_top_40">2.5 Status: <%= @east_25_status %></div>

            </div>

           <div class="line"> </div>



            <div >
              <a name="west"></a> 

              <p>
                west
              </p>
             <b><%= @west %></b>
             <b><%= @west_25 %></b>

               <p  class="small margin_top_20 "></p><br>
               <div class="small margin_top_40">PSI Status: <%= @west_status %></div><br>
               <div class="small margin_top_40">2.5 Status: <%= @west_25_status %></div>

            </div>


            <div >
              <a name="central"></a> 

              <p>
                central
              </p>
             <b><%= @central %></b>
             <b><%= @central_25 %></b>

               <p  class="small margin_top_20 "></p><br>
               <div class="small margin_top_40">PSI Status: <%= @central_status %></div><br>
               <div class="small margin_top_40">2.5 Status: <%= @central_25_status %></div>

            </div>
        </div>

        <div class="line"> </div>

        <div>

          <a name="overall"></a> 

          <p class="xsmall">
            Overall PSI
          </p>
         <b class="xsmall"><%= @overall_psi %></b>
           <p  class="small margin_top_20 "></p><br>
        </div>

        <div class="line"> </div>

        <div>
          <p class="xsmall">
            Overall 2.5
          </p>
         <b class="xsmall"><%= @overall_25 %></b>
           <p  class="small margin_top_20 "></p><br>
        </div>

    </div>


</div> <!-- center -->

