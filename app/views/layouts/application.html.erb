	<meta name="viewport" content="width=device-width, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">

</head>
<body style="background:<%= @color %>;">


<div class="center">
    <b class="bigger">
        <%= Time.zone.now.strftime("Happy %A")%>
    </b>
    <br>
    <br>
    <b class="bigger">
        <%= Time.zone.now.strftime("%I:%M%p, %d %b")%>
    </b>
    <br>
    <br>
   <div class="line"> </div>



   <p><a href="#north">north</a> | <a href="#south">south</a> | <a href="#east">east</a> | <a href="#west">west</a> | <a href="#central">central</a>| <a href="#overall">overall</a> | <a href="#top">top</a>  </p>


